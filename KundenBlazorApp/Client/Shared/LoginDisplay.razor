@code{
    [CascadingParameter]
    public Task<AuthenticationState> AuthState { get; set; } // обязателен !!!

    [Parameter]
    public EventCallback OnLoginCallback { get; set; }
    
    UserDTO userDTO = null;
    string PicPath { get; set; } = "icon-512.png";
    bool isAdmin = false;
    bool isPi = false;

    protected override async Task OnParametersSetAsync()
    {
        if (AuthState is not null)
        {
            userDTO = await authStateProvider.GetCurrentUser();
            if (!string.IsNullOrEmpty(userDTO.Avatar))
            {
                PicPath = userDTO.Avatar;
            }
            else
            {
                PicPath = "files/w3.png";
            }
            isAdmin = AuthState.Result.User.IsInRole(Role.admin.ToString());
            isPi = AuthState.Result.User.IsInRole(Role.pichugina.ToString());
        }
    }

    private async Task Logout()
    {
        await authStateProvider.Logout();
        navigationManager.NavigateTo("/");
    }

}
